<div class="container col-8 my-5">
  <div class="row justify-content-center"">
    <div class="col-md-10">
      <div class="question">
        <h1 class="mb-4"><%= form_title %></h1>

        <% if @question.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @question.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for @question do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control input-lg", placeholder: "Titulo" %>
          </div>

          <div class="form-group">
            <%= f.text_area :content, style:"height:12em;", class: "form-control input-lg", placeholder: "Pregunta" %>
          </div>
          <div>
            <%= f.submit 'Preguntar' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
